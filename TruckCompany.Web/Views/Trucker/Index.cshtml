@model IEnumerable<Trucker>

<div class="container p-3" >

    <div class="row pt-4">
       <div class="col-6">
           <h2 class="text-primary">Truckers List</h2>
       </div>
        <div class="col-6 text-right">
            <a asp-controller="Trucker" asp-action="Create" class="btn btn-primary">Add new Trucker</a>
        </div>
        <br/><br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            FirstName
                        </th>
                        <th>
                            LastName
                        </th>
                        <th>
                            PhoneNumber
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <td width="35%">@item.FirstName</td>
                        <td  width="35%">@item.LastName</td>
                        <td  width="35%">@item.PhoneNumber</td>
                        <td  width="30%">
                            <div class="col-6 text-right">
                                    <a asp-controller="Trucker" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                                    <br />
                                    <a asp-controller="Trucker" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                        
                    }
                </tbody>
            </table>
        }
    </div>
</div>