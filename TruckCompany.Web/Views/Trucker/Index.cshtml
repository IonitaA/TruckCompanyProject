@model IEnumerable<TruckerModel>

    <head>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/v4-shims.css">
    </head>
    <body>


        <div class="container p-3">

            <div class="row pt-4">
                <div class="col-6">
                    <h2 class="text-primary">Truckers List</h2>
                </div>
                <div class="col-6 text-right">
                    <a asp-controller="Trucker" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Add new Trucker</a>
                </div>
                <br /><br />
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    FirstName
                                </th>
                                <th>
                                    LastName
                                </th>
                                <th>
                                    PhoneNumber
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td width="30%">@item.FirstName</td>
                                    <td width="30%">@item.LastName</td>
                                    <td width="30%">@item.PhoneNumber</td>
                                    <td width="50%">
                                        <div class="col-6 text-right">
                                            <a asp-controller="Trucker" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-info"><i class="fas fa-info"></i></a>
                                            <a asp-controller="Trucker" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary"><i class="fas fa-user-edit"></i></a>
                                            <a asp-controller="Trucker" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger"><i class="fas fa-user-times"></i></a>
                                        </div>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </body>